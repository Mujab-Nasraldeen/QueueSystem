@model List<PatientAppointmentRespDto>

@{
    ViewData["Title"] = "PatientsAppointments";
}

<h2>  <i class="bi bi-clipboard2-check"></i> Patients Appointments </h2>

<a class="btn btn-primary" asp-action="AssignPatientsToDoctors"> <i class="bi bi-plus"></i> Add Appointment</a>

<div class="mt-4">
    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            No Appointments found!
        </div>
    }
    else
    {
        <ul>
            @foreach(var Appointment in Model)
            {
                <li>@Appointment.FullName | @Appointment.Gender</li>
            }
        </ul>
    }
</div>